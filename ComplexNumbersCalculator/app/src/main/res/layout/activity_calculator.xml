<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kość_słoniowa"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/infoB"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/margin_48"
        android:text="B:"
        android:textColor="@color/fuksja"
        app:layout_constraintEnd_toStartOf="@+id/realisB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoA" />

    <EditText
        android:id="@+id/imaginarisA"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginTop="@dimen/margin_48"
        android:layout_marginEnd="@dimen/margin_64"
        android:ems="10"
        android:hint="@string/imaginaris"
        android:inputType="numberSigned|numberDecimal"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/realisA"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginStart="@dimen/margin_64"
        android:layout_marginTop="@dimen/margin_48"
        android:ems="10"
        android:hint="@string/realis"
        android:inputType="numberSigned|numberDecimal"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/imaginarisB"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_64"
        android:ems="10"
        android:hint="@string/imaginaris"
        android:inputType="numberSigned|numberDecimal"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imaginarisA" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/margin_64"
        android:layout_marginTop="@dimen/margin_32"
        android:backgroundTint="@color/karmazynowy"
        android:text="@string/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betterSpinner" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_64"
        android:backgroundTint="@color/karmazynowy"
        android:text="@string/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betterSpinner" />

    <EditText
        android:id="@+id/realisB"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginStart="@dimen/margin_64"
        android:layout_marginTop="@dimen/margin_24"
        android:ems="10"
        android:hint="@string/realis"
        android:inputType="numberSigned|numberDecimal"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realisA" />

    <TextView
        android:id="@+id/infoA"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/margin_64"
        android:background="@color/kość_słoniowa"
        android:text="A:"
        android:textColor="@color/fuksja"
        app:layout_constraintEnd_toStartOf="@+id/realisA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.polsl.tm.BetterSpinner
        android:id="@+id/betterSpinner"
        android:layout_width="277dp"
        android:layout_height="29dp"
        android:layout_marginStart="@dimen/margin_64"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realisB" />

</androidx.constraintlayout.widget.ConstraintLayout>